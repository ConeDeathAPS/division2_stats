@import '../../../styles/variables.styl';

.weaponTile
	width: 100%
	background-color: black;
	border-top: 1px solid warm_white
	border-right: 1px solid warm_white
	border-left: 1px solid warm_white
	padding: 10px
	color: white;
	&:last-child
		border-bottom: 1px solid warm_white
	&.exotic
		border-top: 1px solid exotic_red
		border-right: 1px solid exotic_red
		border-left: 1px solid exotic_red
		background-color: exotic_red_background
		&:last-child
			border-bottom: 1px solid exotic_red