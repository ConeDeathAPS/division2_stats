@import "variables.styl"

html
	width: 100%
	height: 100%
body
	background-color: light_gray_background
	width: 100%
	height: 100%
	margin: 0px
	padding: 0px
h1, h2, h3, h4, h5, a, p, li, span
	color: white

h1, h2
	font-family: ghost_clan_font

h3, h4, h5, a, button
	font-family: borda_font
	
p, li, span
	font-family: Helvetica
	
button
	color: white
	padding: 8px 16px
	text-transform: uppercase
	background-color: black
	border: 2px solid division_orange
	font-weight: bold
	cursor: pointer
	border-radius: 6px
	&:hover
		background-color: division_orange
		
main
	width: 100%
	display: flex
	flex-direction: column
	justify-content: start
	align-items: center
	align-content: center
	
			